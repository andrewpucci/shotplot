{
  "name": "shotplot",
  "version": "4.0.0",
  "description": "A tool used to obtain spacial coordinates based on an ice hockey rink",
  "author": "Andrew Pucci",
  "license": "GPL-3.0",
  "scripts": {
    "browserslist:update": "npx update-browserslist-db@latest",
    "clean": "rm -rf dist src/site/assets/js/* src/site/assets/css/*",
    "assets:build": "node scripts/build-deps.mjs && vite build --mode production",
    "assets:build:dev": "node scripts/build-deps.mjs && vite build --mode development",
    "assets:watch": "node scripts/build-deps.mjs && vite build --watch --mode development",
    "site:build:dev": "ELEVENTY_ENV=development eleventy",
    "site:build:prod": "ELEVENTY_ENV=production eleventy",
    "dev": "npm run clean && npm run assets:build:dev && (npm run assets:watch & ELEVENTY_ENV=development eleventy --serve)",
    "prod": "npm run clean && npm run assets:build && npm run site:build:prod",
    "build": "npm run prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewpucci/shotplot"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "datatables.net-bs5": "^2.3.7",
    "datatables.net-buttons-bs5": "^3.2.6",
    "jquery": "^4.0.0",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "html-minifier": "^4.0.0",
    "sass": "^1.97.3",
    "stylelint": "^17.1.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "stylelint-scss": "^7.0.0"
  }
}
